{% extends 'base.jinja2' %}

{% block meta_block %}
  {% include "partials/post_meta_block.jinja2" %}
{% endblock %}

{% block body_class %}post-page{% endblock %}

{% block body_content %}
  <div class="container">
    <div class="row content">
      <div class="col-md-12" id="post-page-header">
        {% include "partials/brand.jinja2" %}
        {% include "partials/main_menu.jinja2" %}
        <div class="clearfix"></div>
      </div>
      <div class="col-md-12 left-content">
        <article class="post col-md-12" >
          <div class="post-title">
            <h1 class="title">
              {% block post_title %}
                {{ post.data.POST_TITLE }}
              {% endblock %}
            </h1>
          </div>
          <div class="post-content">
            <div class="post-date">
            {% block post_date %}
              <div class="line"> <span> {{ post.data.PUBLISHED_DATE.strftime('%b. %d, %Y') }} by {{ post.data.AUTHOR }} </span> </div>
            {% endblock %}
            </div>
            {% block post_content %}{% endblock %}
          </div>
          <div class="post-comments">
            {% include "partials/disqus.jinja2" %}
          </div>
        </article>
      </div>
      <div class="col-md-12 other-posts">
        {% include "partials/other_posts.jinja2" %}
      </div>
    </div>

  </div>
  {% block footer %}
    {% include "partials/footer.jinja2" %}
  {% endblock %}
{% endblock %}
