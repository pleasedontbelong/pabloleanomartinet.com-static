{% extends 'base.jinja2' %}

{% block body_class %}posts-page{% endblock %}

{% block body_content %}
  <div class="page container">
    <header class="clearfix">
      <h1><i class="fa fa-newspaper-o"></i> Posts</h1>
      <nav id="main-menu" >
        <ul class="menu">
          <li>
            <a href="{{ url('homepage')}}">Home</a>
          </li>
          <li>
            <a href="{{ url('projects-list')}}">Projects</a>
          </li>
          <li>
            <a href="http://www.pabloleanomartinet.com/about-me/">About Me</a>
          </li>
        </ul>
      </nav>
    </header>
    <div class="row">
    {% for post in posts_list() %}
      <div class="col-md-8 col-md-offset-2">
        <article class="post-item">
            <h1>
              <a href="{{ post.link }}">{{ post.data.POST_TITLE }}</a>
              <small><a href="{{ post.link }}#disqus_thread">Comments</a></small>
            </h1>
            <p>{{ post.data.POST_DESCRIPTION }}</p>
        </article>
      </div>
    {% endfor %}
    </div>
  </div>
{% endblock %}

{% block extra_javascript %}
<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES * * */
    var disqus_shortname = 'pleasedontbelong';

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
        s.src = '//' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
    }());
</script>
{% endblock %}
