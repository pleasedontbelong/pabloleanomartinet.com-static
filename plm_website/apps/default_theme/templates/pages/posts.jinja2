{% extends 'base.jinja2' %}

{% block body_class %}posts-page{% endblock %}

{% block body_content %}
  <div class="page container">
    <header class="clearfix">
      <h1><i class="fa fa-newspaper-o"></i> Posts</h1>
      <nav id="main-menu" >
        <ul class="menu">
          <li>
            <a href="{{ url('homepage')}}">Home</a>
          </li>
          <li>
            <a href="{{ url('projects-list')}}">Projects</a>
          </li>
          <li>
            <a href="http://www.pabloleanomartinet.com/about-me/">About Me</a>
          </li>
        </ul>
      </nav>
    </header>
    <div class="row">
    {% for post in posts_list() %}
      <div class="col-md-8 col-md-offset-2">
        <article class="post-item">
          <a href="{{ post.link }}">
          <h1>{{ post.data.POST_TITLE }}</h1>
          <p>{{ post.data.POST_DESCRIPTION }}</p>
          </a>
        </article>
      </div>
    {% endfor %}
    </div>
  </div>
{% endblock %}
